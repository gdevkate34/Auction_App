<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:fillViewport="true"
                                            android:background="@android:color/white">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">
        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editTextEmailSignUp" android:layout_marginTop="96dp"
                android:background="@drawable/edit_text_style"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent" android:hint="Email" android:paddingLeft="20dp"
                android:fontFamily="@font/biryani_semibold"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editTextPasswordSignUp"
                android:background="@drawable/edit_text_style"
                app:layout_constraintStart_toStartOf="@+id/editTextEmailSignUp"
                app:layout_constraintEnd_toEndOf="@+id/editTextEmailSignUp"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/editTextEmailSignUp"
                android:hint="@string/passwordHint" android:paddingLeft="20dp"
                android:fontFamily="@font/biryani_semibold"/>
        <Button
                android:text="Register"
                android:background="@drawable/button_style"
                android:id="@+id/buttonRegister" app:layout_constraintStart_toStartOf="@+id/editTextPasswordSignUp"
                app:layout_constraintEnd_toEndOf="@+id/editTextPasswordSignUp" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextPasswordSignUp" android:layout_height="wrap_content"
                android:layout_width="150dp" android:textColor="@android:color/white"
                android:fontFamily="@font/biryani_semibold"/>
        <TextView
                android:text="Already User ?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewAlreadyUser" app:layout_constraintStart_toStartOf="@+id/buttonRegister"
                app:layout_constraintEnd_toEndOf="@+id/buttonRegister" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonRegister" android:textAlignment="center"
                android:textSize="18sp" android:textColor="@android:color/black"
                android:fontFamily="@font/biryani_semibold"/>
        <TextView
                android:text="@string/accountRegister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/editTextEmailSignUp"
                android:textSize="30sp" android:fontFamily="@font/biryani_semibold" android:textAlignment="center"
                android:textColor="@android:color/holo_blue_dark"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>
