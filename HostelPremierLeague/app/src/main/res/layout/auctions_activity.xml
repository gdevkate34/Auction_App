<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingRight="16dp" android:paddingLeft="16dp"
            android:paddingEnd="16dp" android:paddingStart="16dp" android:paddingTop="16dp">
        <android.support.v7.widget.CardView
                android:id="@+id/cardViewDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp" android:background="@android:color/holo_green_light">
            <TextView
                    android:text="Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewName" android:padding="8dp"
                    android:fontFamily="@font/biryani_semibold" android:textSize="18sp"
                    android:textColor="@android:color/primary_text_light_nodisable" android:textAlignment="center"/>
            <TextView
                    android:text="Course"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewCourse" android:textSize="18sp"
                    android:fontFamily="@font/biryani_semibold"
                    android:textColor="@android:color/primary_text_light_nodisable"
                    android:layout_marginTop="50dp"
                    android:padding="8dp" android:textAlignment="center"/>
            <TextView
                    android:text="Position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewPosition"
                    android:padding="8dp"
                    android:layout_marginTop="100dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/biryani_semibold"
                    android:textColor="@android:color/primary_text_light_nodisable"
                    android:textAlignment="center"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:id="@+id/CreditsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardViewDetails"
                android:background="@android:color/holo_green_light" android:layout_marginTop="16dp">
            <TextView
                    android:text="0"
                    android:layout_width="194dp"
                    android:layout_height="150dp" android:id="@+id/textTotalCredits" android:textAlignment="center"
                    android:fontFamily="@font/biryani_semibold" android:textSize="36sp"
                    android:textColor="@android:color/black" android:paddingTop="32dp"/>
            <TextView
                    android:text="0"
                    android:layout_height="150dp"
                    android:id="@+id/textRemainig" android:textAlignment="center"
                    android:fontFamily="@font/biryani_semibold" android:textSize="36sp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="right" android:layout_width="190dp" android:paddingTop="32dp"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/CreditsView" android:layout_marginTop="16dp"
        >

            <TextView
                    android:text="00 : 00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewTimer" android:textAlignment="center"
                    android:textSize="36sp" android:fontFamily="@font/biryani_semibold"
                    android:textColor="@android:color/black"/>

            <Button
                    android:text="Bid"
                    android:layout_width="match_parent"
                    android:id="@+id/buttonBid"


                    android:layout_marginTop="90dp" android:layout_height="80dp"
                    android:fontFamily="@font/biryani_semibold" android:textSize="36sp"
                    android:textColor="@android:color/white" android:background="@drawable/button_style"
                    android:layout_marginLeft="50dp" android:layout_marginRight="50dp"/>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
