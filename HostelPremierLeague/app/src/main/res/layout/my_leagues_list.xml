<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardViewLiguesList"
            android:layout_marginBottom="20dp"
    >

        <TextView
                android:text="League Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMyLeagueName"

                android:fontFamily="@font/biryani_semibold" android:textSize="18sp" android:textAlignment="viewStart"
                android:textStyle="bold" android:textColor="@android:color/black"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" android:layout_marginBottom="0dp" android:paddingLeft="8dp"
                android:paddingRight="8dp" android:layout_marginTop="5dp" android:paddingTop="5dp"/>
        <TextView
                android:text="Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDate"
                android:layout_below="@+id/textViewMyLeagueName"
                android:layout_marginTop="45dp" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" android:layout_marginBottom="0dp"
                android:fontFamily="@font/biryani_semibold" android:textSize="18sp"
                android:textColor="@android:color/black" android:textAlignment="textEnd" android:textStyle="bold"
                android:paddingLeft="8dp" android:paddingRight="8dp"/>
        <TextView
                android:text="Organiser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewOrganiser"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/biryani_semibold" android:textSize="18sp"
                android:textColor="@android:color/black" android:textStyle="bold" android:textAlignment="textEnd"
                android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" android:layout_marginBottom="8dp"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>