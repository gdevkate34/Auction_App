<?xml version="1.0" encoding="UTF-8"?>

        <android.support.constraint.ConstraintLayout android:background="@android:color/holo_green_light" tools:context=".MainActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <Button android:background="@drawable/selct_photo_button" android:layout_height="180dp" android:layout_width="180dp"
            android:textSize="36sp" android:fontFamily="@font/biryani_semibold"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="80dp" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/buttonSelectPhoto"
            android:text="Select Photo"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/buttonSelectPhoto"
            app:layout_constraintStart_toStartOf="@+id/buttonSelectPhoto" android:id="@+id/buttonUpload"
            android:text="Upload" app:layout_constraintTop_toBottomOf="@+id/buttonSelectPhoto"
            android:background="@color/design_default_color_primary_dark" android:fontFamily="@font/biryani_semibold"
            android:textSize="18sp" android:textColor="@android:color/white"/>

    <de.hdodenhof.circleimageview.CircleImageView android:layout_height="180dp" android:layout_width="180dp"
                                                  android:id="@+id/selectPhotoImageView"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  android:layout_marginStart="131dp" android:layout_marginTop="50dp"
                                                  app:layout_constraintTop_toBottomOf="@+id/buttonUpload"
                                                  app:layout_constraintEnd_toEndOf="parent"
                                                  android:layout_marginEnd="100dp" android:layout_marginBottom="185dp"
                                                  app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>